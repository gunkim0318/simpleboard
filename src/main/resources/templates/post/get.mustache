{{>layout/header}} <!--<body>-->
<article class="uk-article uk-align-center" style="width: 80%">

    <h1 class="uk-article-title"><a class="uk-link-reset" href="">{{post.title}}</a></h1>

    <p class="uk-article-meta">Written by <a href="#">{{post.writer}}</a> {{post.createDate}}</p>

    <p class="uk-text-lead">
        {{post.content}}
    </p>
    <form id="modiForm" action="/post/modify" method="get">
        <input type="hidden" name="postNum" value="{{post.id}}"/>
    </form>
    <div class="uk-grid-small uk-child-width-auto" uk-grid>
        <div>
            <a class="uk-button uk-button-text" href="#">5 Comments</a>
        </div>
    </div>
    <div class="uk-grid">
        <div class="uk-align-center uk-width-auto">
            <button id="backBtn" class="uk-button uk-button-danger">뒤로가기</button>
            <button id="modiBtn" class="uk-button uk-button-primary">수정</button>
        </div>
    </div>
</article>
{{>layout/footer}} <!--</body>-->
<script src="/js/post/get.js"></script>