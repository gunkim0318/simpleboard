{{>layout/header}} <!--</body>-->
    <link rel="stylesheet" href="/css/member/signUp.css"/>
    <form class="mui-form mui-panel" action="/member/signUp" method="post" style="width: 30%; margin: 0 auto;">
        <input name="_csrf" type="hidden" value="{{_csrf.token}}" />
        <legend><h1>회원가입</h1></legend>
        <span class="valid-msg">{{errors.email}}</span>
        <div class="mui-textfield">
            <input name="email" type="text" placeholder="메일을 입력해주세요" value="{{member.email}}">
        </div>
        <span class="valid-msg">{{errors.password}}</span>
        <div class="mui-textfield">
            <input name="password" type="text" placeholder="비밀번호를 입력해주세요" value="{{member.password}}">
        </div>
        <span class="valid-msg">{{errors.passwordChk}}</span>
        <div class="mui-textfield">
            <input name="passwordChk" type="text" placeholder="비밀번호 확인을 입력해주세요" value="{{member.passwordChk}}">
        </div>
        <span class="valid-msg">{{errors.nickname}}</span>
        <div class="mui-textfield">
            <input name="nickname" type="text" placeholder="닉네임을 입력해주세요" value="{{member.nickname}}">
        </div>
        <span class="valid-msg">{{errors.gender}}</span>
        <div class="mui-radio" style="text-align: center;">
            <label>
                <input type="radio"
                       name="gender"
                       value="M"
                       checked>
                남자
            </label>
            <label>
                <input type="radio"
                       name="gender"
                       value="F"
                       {{#isFemale}}checked{{/isFemale}}
                >
                여자
            </label>
        </div>
        <div style="text-align: center;">
            <button type="button" id="backBtn" class="mui-btn mui-btn--raised">취소</button>
            <button type="submit" id="signUpBtn" class="mui-btn mui-btn--raised mui-btn--primary">입력</button>
        </div>
    </form>
{{>layout/footer}} <!--</body>-->
<script src="/js/member/signUp.js"></script>