{{>layout/header}} <!--<body>-->
<div style="width: 80%; margin: 0 auto;">
    <div class="page-header">
        <h1>글 수정</h1>
    </div>
    <form class="mui-form" action="/posts/update" method="post">
        <input type="hidden" name="_csrf" value="{{_csrf.token }}"/>
        <input type="hidden" name="id" value="{{posts.id}}"/>

        <div class="mui-textfield">
            <input  name="title" type="text" placeholder="제목을 입력해주세요" value="{{posts.title}}">
            <label>제목</label>
        </div>
        <div class="mui-textfield">
            <textarea name="content" placeholder="내용을 입력해주세요" style="resize: none;" rows="8">{{posts.content}}</textarea>
            <label>내용</label>
        </div>
        <div style="text-align: center;">
            <button type="submit" id="modiBtn" class="mui-btn mui-btn--raised mui-btn--primary">수정</button>
            <button type="button" id="backBtn" class="mui-btn mui-btn--raised">뒤로가기</button>
        </div>
    </form>
</div>
{{>layout/footer}} <!--</body>-->
<script src="/js/posts/modify.js"></script>
<script>
        {{#errors}}
            var titleErrorMsg = "{{title}}";
            var contentErrorMsg = "{{content}}";

            if(titleErrorMsg !== ''){
                $('input[name=title]').focus();
                alert(titleErrorMsg);
            }else if(contentErrorMsg !== ''){
                $('textarea[name=content]').focus();
                alert(contentErrorMsg);
            }
        {{/errors}}
</script>