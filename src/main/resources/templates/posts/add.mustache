{{>layout/header}} <!--<body>-->
<div style="width: 80%; margin: 0 auto;">
    <div class="page-header">
        <h1>글 작성</h1>
    </div>
    <form action="/posts/insert" method="post">
        <input name="_csrf" type="hidden" value="{{_csrf.token}}" />
        <input name="title" type="text" class="form-control" placeholder="제목을 입력해주세요" style="margin-bottom: 20px;">
        <textarea name="content" class="form-control" placeholder="내용을 입력해주세요" rows="8" style="resize: none;"></textarea>
        <div>
            <button type="submit" id="addBtn" class="btn btn-primary" style="width: 100%; margin-top: 10px;">입력</button>
            <hr/>
            <button type="button" id="backBtn" class="btn btn-default" style="width: 100%;">뒤로가기</button>
        </div>
    </form>
</div>
{{>layout/footer}} <!--</body>-->
<script src="/js/posts/add.js"></script>