{{>layout/header}} <!--<body>-->
<link rel="stylesheet" href="/css/posts/get.css"/>
<meta id="_csrf" name="_csrf" content="{{_csrf.token}}"/>
<meta id="_csrf_header" name="_csrf_header" content="{{_csrf.headerName}}"/>
<div style="width: 80%; margin: 0 auto;">
    <div class="page-header">
        <h1>{{posts.title}}</h1>
        <small style="font-size: 1.5rem;">작성자 <a href="#">{{posts.writer}}</a>
            작성일 {{posts.createDate}}</small>
    </div>
    <h2 style="padding-top: 30px;padding-bottom: 30px;">
        {{posts.content}}
    </h2>
    <hr/>
    <div style="text-align: center;margin-bottom: 22px;">
        <button id="backBtn" class="btn btn-default">뒤로가기</button>
        {{#isMyPosts}}
            <button id="modiBtn" class="btn btn-primary">수정</button>
            <button id="delBtn" class="btn btn-danger">삭제</button>
        {{/isMyPosts}}
    </div>
    <button id="showReplyBtn" type="button" class="btn btn-info">{{replyCnt}} 댓글</button>
    <div id="replyBody" class="panel panel-default" style="margin-top: 10px; display: none;">
        <div class="panel-heading">댓글</div>
        <div class="panel-body">
            <div>
                <textarea id="replyContent" name="content" class="form-control" rows="3" style="resize: none;"></textarea>
                <div style="text-align: right; margin-top: 10px;">
                    <button id="replyAddBtn" type="button" class="btn btn-primary">작성</button>
                </div>
            </div>
            <nav class="text-center">
                <ul class="pagination">
                </ul>
            </nav>
            <div id="replyList">
            </div>
        </div>
    </div>
</div>
<form id="actionForm">
    <input type="hidden" name="_csrf" value="{{_csrf.token }}"/>
    <input type="hidden" name="postsNum" value="{{posts.id}}"/>
</form>
<!-- 모달 영역 -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="myModalLabel">댓글 수정</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" name="rno">
                <textarea style="width: 100%; height: 100%; resize: none;">내용</textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="replyUpdateBtn">수정</button>
                <button type="button" class="btn btn-danger" id="replyDeleteBtn">삭제</button>
            </div>
        </div>
    </div>
</div>
{{>layout/footer}} <!--</body>-->
<script src="/js/posts/get.js"></script>