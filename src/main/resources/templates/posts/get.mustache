<meta name="_csrf" content="{{_csrf.token}}"/>
<meta name="_csrf_header" content="{{_csrf.headerName}}"/>
{{>layout/header}} <!--<body>-->
<article class="uk-article uk-align-center" style="width: 80%">

    <h1 class="uk-article-title"><a class="uk-link-reset" href="">{{posts.title}}</a></h1>

    <p class="uk-article-meta">Written by <a href="#">{{posts.writer}}</a> {{posts.createDate}}</p>

    <p class="uk-text-lead">
        {{posts.content}}
    </p>
    <form id="actionForm">
        <input type="hidden" name="_csrf" value="{{_csrf.token }}"/>
        <input type="hidden" name="postsNum" value="{{posts.id}}"/>
    </form>
    <div class="uk-grid-small uk-child-width-auto" uk-grid>
        <div>
            <a class="uk-button uk-button-text" href="#">5 Comments</a>
        </div>
    </div>
    <div class="uk-grid">
        <div class="uk-align-center uk-width-auto">
            <button id="backBtn" class="uk-button uk-button-default">뒤로가기</button>
            {{#isMyPosts}}
                <button id="modiBtn" class="uk-button uk-button-primary">수정</button>
                <button id="delBtn" class="uk-button uk-button-danger">삭제</button>
            {{/isMyPosts}}
        </div>
    </div>
</article>
{{>layout/footer}} <!--</body>-->
<script src="/js/posts/get.js"></script>